<div class="container">
  <div id="show" class="card">
    <div class="card-body">
      <p>
        <strong>First Name:</strong>
        <%= @customer.first_name %>
      </p>
      <p>
        <strong>Last Name:</strong>
        <%= @customer.last_name%>
      </p>
      <p>
        <strong>Email:</strong>
        <%= @customer.email%>
      </p>
      <p>
        <strong>Mobile:</strong>
        <%= @customer.mobile %>
      </p>
      <%= link_to 'Back', customer_dashboard_path, class: 'btn btn-primary' %>|
      <%= link_to 'Edit',[:edit, :customer, @customer], class: 'btn btn-success' %>
    </div>
  </div>
</div>
