<div class="container-fluid">
  <h1 class="table-text-customers"> All Account</h1>
  <hr>
  <table id="example" class="table table-striped table-bordered">
    <thead>
      <tr>
        <th>Firm Name</th>
        <th>Firm type</th>
        <th>no_of_employees</th>
        <th>Show</th>
      </tr>
    </thead>
    <% if @accounts.present? %>
      <tbody>
        <% @accounts.each do |account| %>
          <tr>
            <td><%= account.firm_name %></td>
            <td><%= account.firm_type %></td>
            <td><%= account.no_of_employees %></td>
           <td><%= link_to 'Show', [:customer, account], class: 'btn btn-primary'%></td>
          </tr>
        <% end %>
      </tbody>
    <% end %>
  </table>
  <%= link_to 'New Account ', new_customer_account_path, class: 'table-button-customers btn btn-primary' %>
</div>