<div class="col-md-4" style="margin-left: 20%; margin-top: 4%">
	<div class="card card-user">
		<% if @customer_accountants.present? %>
			<% @customer_accountants.each do |customer_accountant| %>
				<div class="card-image">
					<img src="https://ununsplash.imgix.net/photo-1431578500526-4d9613015464?fit=crop&fm=jpg&h=300&q=75&w=400" alt="...">
				</div>
				<div class="card-body">
					<div class="author">
						<a href="#">
							<!-- <img class="avatar border-gray" src="../assets/img/faces/face-3.jpg" alt="..."> -->
							<h5 class="title"><%= customer_accountant.accountant.try(:email) %></h5>
						</a>
						<p class="description">
							<%= customer_accountant.accountant.try(:first_name) %>
							<%= customer_accountant.accountant.try(:last_name) %>
						</p>
					</div>
					<!-- <p class="description text-center">
						"Lamborghini Mercy
						<br> Your chick she so thirsty
						<br> I'm in that two seat Lambo"
					</p> -->
				</div>
			<% end %>
		<% end %>
	</div>
</div>