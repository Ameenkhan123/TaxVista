<div class="col-md-12">
  <div class="container">
    <div class="col-md-3"></div>
    <div class="col-md-6 card-body" style="margin-left: 20%">
      <h2  class="text-center card-header">Forgot your password?</h2>

      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= devise_error_messages! %>

      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
      </div>

      <div class="actions padding-form">
        <%= f.submit "Send me reset password instructions", class: "btn btn-info"   %>
      </div>
      <% end %>

      <%= render "accountants/shared/links" %>
    </div>
    <div class="col-md-3"></div>
  </div>
</div>