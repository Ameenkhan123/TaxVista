<div class="col-md-12">
  <div class="container">
    <div class="col-md-3"></div>
    <div class="col-md-6 card-body" style="margin-left: 20%;margin-top: 5%;">
      <h1>Create Customer</h1><hr>
      <%= form_with(model: [:admin, @customer], local: true) do |f| %>
      <% if customer.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(customer.errors.count, "error") %> prohibited this customer from being saved:</h2>
        <ul>
          <% customer.errors.full_messages.each do |message| %>
          <li><%= message %></li>
          <% end %>
        </ul>
      </div>
      <% end %>
      <div>
        <label>First Name</label>
        <%= f.text_field :first_name, class: "form-control" %>
      </div>

      <div>
        <label>Last Name</label>
        <%= f.text_field :last_name, class: "form-control" %>
      </div>

      <div>
        <label >Email Address </label>
        <%= f.text_field :email, class: "form-control" %>
      </div>

      <div>
        <label>Mobile</label>
        <%= f.text_field :mobile, class: "form-control" %>
      </div>

      <div>
        <label>Password</label>
        <%= f.text_field :password, class: "form-control"%>
      </div>

      <div>
        <label>Password Confirmation</label>
        <%= f.text_field :password_confirmation, class: "form-control" %>
      </div><br>
      <div class="form-group text-center">
        <%= f.submit "Sign up", :id => 'login', :class =>  'btn btn-primary' %>
        <%= link_to 'Cancel', admin_customers_path, :class =>  'btn btn-danger' %>
      </div>
      <% end %>
    </div>
    <div class="col-md-3"></div>
  </div>
</div>